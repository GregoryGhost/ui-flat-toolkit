@import "../../global/colors.styl";

.stages
  display: flex
  
  &__stage
    fill: $colorGray
    stroke: $colorGray
   
    &_completed
      fill: $colorOrange
      stroke: $colorOrange
      
  &__step
     fill: $colorDarkGray
     font-weight: bold
    
  &__stage_completed + &__step
      fill: $colorWhite
      
