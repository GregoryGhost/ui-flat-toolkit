.demo-components
    display: flex
    justify-content: space-between
    flex-direction: column
    width: 90%
    margin: 0 auto
    padding: 4.75rem 3% 4.75rem 3%
    align-items: center
    
    &__title
        text-align: center
        margin-bottom: 5rem

    &__sample
        display: flex
        flex-direction: column
        align-items: flex-start

    &__row
        display: flex
        flex-direction: row
        flex-wrap: wrap
        align-items: center
    
    &__item
        margin: 1rem

.sliders
    width: 17rem

.steps
    padding-left: 10rem
    width: 50rem

