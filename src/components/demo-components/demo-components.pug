include ../title/title.pug
include ../button_orange/button_orange.pug
include ../button_greenish-blue/button_greenish-blue.pug
include ../arrow-button/arrow-button.pug
include ../percentage-progress-bar/percentage-progress-bar.pug
include ../pie-chart/pie-chart.pug

mixin demo-components()
    .demo-components
        .demo-components__block
            .demo-components__title
                +title("standard buttons")
            .demo-components__sample
                - var commonText = 'button';
                .demo-components__row
                    .demo-components__item
                        +button_greenish-blue({
                            text: commonText
                        })
                    .demo-components__item
                        +button_greenish-blue({
                            text: commonText,
                            isBig: true
                        })
                    .demo-components__item
                        +button_orange({
                            text: commonText,
                            isBig: true
                        })
                    .demo-components__item
                        +button_orange({
                            text: commonText
                        })
                .demo-components__row
                    .demo-components__item
                        +button_greenish-blue({
                            text: commonText,
                            isDisabled: true
                        })
                    .demo-components__item
                        +button_greenish-blue({
                            text: commonText,
                            isBig: true,
                            isDisabled: true
                        })
                    .demo-components__item
                        +button_orange({
                            text: commonText,
                            isBig: true,
                            isDisabled: true
                        })
                    .demo-components__item
                        +button_orange({
                            text: commonText,
                            isDisabled: true
                        })

        .demo-components__block
            .demo-components__title
                +title("arrow buttons")
            .demo-components__sample
                .demo-components__row
                    .demo-components__item
                        +arrow-button({
                            isDisabled: true
                        })
                    .demo-components__item
                        +arrow-button({
                            direction: 'right',
                            isDisabled: true
                        })
                    .demo-components__item
                        +arrow-button({})
                    .demo-components__item
                        +arrow-button({
                            direction: 'right'
                        })

        .demo-components__block
            .demo-components__title
                +title("percentages / pie chart")
            .demo-components__sample
                .demo-components__row
                    .demo-components__item
                        +percentage-progress-bar({})
                    .demo-components__item
                        +percentage-progress-bar({
                            percent: 38
                        })
                    .demo-components__item
                        +percentage-progress-bar({
                            percent: 62
                        })
                    .demo-components__item
                        +percentage-progress-bar({
                            percent: 89
                        })
                    .demo-components__item
                        -
                            var data = [
                                { percent: 0.1, color: 'blue' },
                                { percent: 0.35, color: 'yellow' },
                                { percent: 0.2, color: 'red' },
                                { percent: 0.35, color: 'gray' }
                            ]
                        +pie-chart(data)

